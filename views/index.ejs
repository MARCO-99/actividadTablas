<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
    <!-- Usamo boxicons -->
    <link
      href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css"
      rel="stylesheet"
    />
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <title>Inicio</title>
  </head>
  <body>
    <% if(login) { %>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand">UPMP</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/"
                >Alumnos</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/carreras">Carreras</a>
            </li>
          </ul>
          <form class="d-flex">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-success" type="submit">
              Search
            </button>
          </form>
        </div>
      </div>
    </nav>

    <div class="container">
      <a href="/create" class="btn btn-outline-warning mt-4"
        ><i class="bx bxs-plus-square bx-md"></i
      ></a>

      <table class="table table table-dark table-striped text-center at-4">
        <thead>
          <tr class="bg-primary text-white">
            <th scope="col">Unidad</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido P.</th>
            <th scope="col">Appellido M.</th>
            <th scope="col">Calificacion</th>
            
          </tr>
        </thead>
        <tbody>
          <% results.forEach((calificacionesTareas)=>{ %>
          <tr>
            <td><%= calificacionesTareas.Unidad %></td>
            <td><%= calificacionesTareas.Descripcion %></td>
            <td><%= calificacionesTareas.Nombre%></td>
            <td><%= calificacionesTareas.Apellidoap %></td>
            <td><%= calificacionesTareas.Apellidoam %></td>
            <td><%= calificacionesTareas.Calificacion %></td>
            
            
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <% } else { %>

    <script>
      Swal.fire({
        title: "Error",
        text: "Debes iniciar sesion",
        icon: "error",
        showConfirmButton: true,
        timer: false,
      }).then(() => {
        window.location = "/login";
      });
    </script>
    <% } %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
